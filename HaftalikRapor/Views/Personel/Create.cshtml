@model HaftalikRapor.Models.PersonelDB

@{
    ViewBag.Title = "Personel Ekle";
}



<h2>Profil Güncelle</h2>
       
 @using (Html.BeginForm("Create", "Personel", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
     @Html.HiddenFor(model=>model.ID)
            <div class="form-horizontal">
                @Html.HiddenFor(model => model.ID)
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    <label class="control-label col-md-2"> Yeni Kullanıcı Adı</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.KullaniciAd, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.KullaniciAd, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2"> Yeni Kullanıcı Şifre</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.KullaniciSifre, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.KullaniciSifre, "", new { @class = "text-danger" })
                    </div>
                </div>
                
              
               

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Kaydet" class="btn btn-success" /> |
                        @Html.ActionLink("Listeye Geri Dön", "Detay", "Personel", new { @class = "btn btn-success" })
                    </div>
                </div>
            </div>
        }
    
   





<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
